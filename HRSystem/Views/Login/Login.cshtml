
<head>


    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <!--Stylesheet-->
    <style media="screen">
        *,
        *:before,
        *:after {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
        }

        
        form {
            height: 570px;
            width: 460px;
            background-color: rgba(255,255,255,0.13);
            position: absolute;
            transform: translate(-50%,-50%);
            top: 50%;
            left: 50%;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.1);
            box-shadow: 0 0 20px rgba(8,7,16,0.6);
            padding: 50px 35px;
        }

            form * {
                font-family: 'Poppins',sans-serif;
                color: #ffffff;
                letter-spacing: 0.5px;
                outline: none;
                border: none;
            }

            form h3 {
                padding-bottom:20px;
                font-size: 38px;
                font-weight: 900;
                line-height: 42px;
                text-align: center;
                color:#134667;
            }

        label {
            display: block;
            margin-top: 30px;
            font-size: 16px;
            font-weight: 700;
            margin-left: 10px;
            color: #134667;
        }

        input {
            display: block;
            height: 50px;
            width: 100%;
            background-color:white;
            border-radius: 3px;
            padding: 0 10px;
            margin-left:10px;
            margin-top: 8px;
            font-size: 14px;
            font-weight: 300;
        }

        ::placeholder {
            color: #e5e5e5;
        }

        .Login {
            margin-top: 50px;
            width: 100%;
            background-color:#134667;
            color: white;
            padding: 15px 0;
            font-size: 18px;
            font-weight: 600;
            border-radius: 5px;
            cursor: pointer;
        }

        
    </style>
</head>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3>Login</h3>

    <label for="username">Username</label>
    <input type="text" placeholder="username" id="username" name="Username">

    <label for="password">Password</label>
    <input type="password" placeholder="Password" id="password" name="Password">



    <input type="submit" value="Login" class="Login" style="background-color: #79C87A;" />


}



@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["LoginMessage"]'
            if (successMessage != '')
                alertify.error(successMessage);
        });
    </script>
}

