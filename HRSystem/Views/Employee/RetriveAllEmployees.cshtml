@model IEnumerable<HRSystem.Models.Employee>

<br />
<br />
<dl class="dl-horizontal">
    <h4>Employees</h4>
    <hr />
    <p>
        <a href="@Url.Action("CreatEmployee","Employee")" class="btn btn-default" style="background-color: #79C87A; color: white;"><b><i class="fa fa-plus"></i> Create New</b></a>

    </p>
</dl>

<table class="table table-striped">
    <thead class="thead-heading">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Postion)
            </th>

            <th scope="col">
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th scope="col"> Actions </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postion)
                </td>

                <td>
                    &#36;@Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    <a href="@Url.Action("UpdateEmployee","Employee", new { id = item.EmployeeID })" class="btn btn-default" style="background-color: #79C87A; color: white"><i class="fa fa-pencil"></i> Edit</a>
                    <a href="@Url.Action("Details","Employee", new { id = item.EmployeeID })" class="btn btn-default"> <b>Details</b></a>
                    <a onclick="Delete(@item.EmployeeID)" class="btn btn-default" style="background-color: #DC0E1D;color:white"><i class="fa fa-trash"></i> Delete</a>


                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Warning', 'Are You Sure to Delete this Record ?', function () {

                window.location.href = '@Url.Action("DeleteEmployee","Employee")/' + id;

            },null );
        }
    </script>
}
