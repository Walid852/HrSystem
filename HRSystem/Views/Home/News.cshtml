<style>
    *, *:before, *:after {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    body {
        background-color: #e9ebee;
        margin-left:-350px;
    }

    .f-card {
        background-color: white;
        /*height:400px;*/
        width: 502px;
        border: 1px solid #d0d1d5;
        border-radius: 3px;
        margin: auto;
        margin-bottom: 10px;
        padding: 12px;
        box-shadow: 0 0 5px rgba(0, 0, 0, .30); /* Not original, just a test */
        border-radius:10px;
        
    }

    .header {
        margin-bottom: 17px;
    }

    .co-logo {
        /*display:block;*/
        float: left;
        margin-right: 8px;
        width: 40px;
        height: 40px;
    }

    .co-name > a {
        font-family: Helvetica;
        font-size: 14px;
        font-weight: bold;
        line-height: 1.38;
        color: #365899;
        text-decoration: none;
        margin-bottom: 2px;
    }

        .co-name > a:hover {
            text-decoration: underline;
        }

    .time {
        font-family: Helvetica;
        font-size: 12px;
        color: #90949c;
    }

        .time > a {
            color: #90949c;
            text-decoration: none;
        }

            .time > a:hover {
                text-decoration: underline;
            }

    .options {
        font-family: Helvetica;
        font-size: 12px;
        color: #e5e5e5;
        float: right;
    }

        .options:hover {
            color: black; /* Fallback */
            color: rgba(0, 0, 0, .30);
        }

    .content {
        clear: both;
        font-family: Helvetica, sans-serif;
        font-size: 14px;
        line-height: 1.38;
    }

    .reference {
        width: 476px;
    }

    .reference-thumb {
        display: block;
        width: 476px;
        height: 249px;
    }

    .reference-content {
        border: 2px solid black;
        border: 2px solid rgba(0, 0, 0, .1);
        border-top: 0;
        padding: 10px 12px 10px 12px;
    }

    .reference:hover .reference-content {
        border-color: black; /* Fallback */
        border-color: rgba(0, 0, 0, .15);
    }

    .reference-title {
        font-family: Georgia;
        font-size: 18px;
        font-weight: 500;
        line-height: 22px;
        margin-bottom: 5px;
    }

    .reference-subtitle {
        font-family: Helvetica;
        font-size: 12px;
        line-height: 16px;
    }

    .reference-font {
        color: #90949c;
        font-family: Helvetica;
        font-size: 11px;
        line-height: 11px;
        text-transform: uppercase;
        padding-top: 9px;
    }

    .social {
        margin-top: 12px;
    }

    .social-buttons {
        color: #7f7f7f;
        font-family: Helvetica;
        font-size: 12px;
        font-weight: bold;
        line-height: 14px;
        border-top: 1px solid #e5e5e5;
        padding-top: 4px;
    }

        .social-buttons span {
            font-size: 12px;
            margin-right: 20px;
            padding: 4px 4px 4px 0;
        }

            .social-buttons span:hover {
                text-decoration: underline;
                cursor: pointer;
            }

            .social-buttons span i {
                padding-right: 4px;
            }
    .grid-container {
        display: grid;
        column-gap: 10px;
        grid-template-columns: auto auto auto;
        padding: 20px;
    }

    .grid-item {
        margin: 5px;
        font-size: 30px;
    }
</style>
@model IEnumerable<HRSystem.Models.Article>
<div class="grid-container">
    @foreach (var item in Model)
    {


        <div class="f-card grid-item">
            <div class="header">
                <div class="options"><i class="fa fa-chevron-down"></i></div>
                @if (item.Author != null)
                {
                    <div class="co-name"><a href="#">@Html.DisplayFor(modelItem => item.Author)</a></div>
                }
                else
                {
                    <div class="co-name"><a href="#">No Auther</a></div>
                }
                <div class="time"><a href="#">@Html.DisplayFor(modelItem => item.PublishedAt)</a> · <i class="fa fa-globe"></i></div>
            </div>
            <div class="content">
                <p>@Html.DisplayFor(modelItem => item.Title)</p>
            </div>

            <div class="reference">
                @if (item.UrlToImage != null)
                {
                    <img class="reference-thumb" src="@Html.DisplayFor(modelItem => item.UrlToImage)" />
                }
                else
                {
                    <img class="reference-thumb" src="~/images/NO.jpg" />
                }

                <div class="reference-content">
                    <div class="reference-title">@Html.DisplayFor(modelItem => item.Description)</div>

                </div>
            </div>
            <div class="social">
                <div class="social-content"></div>
                <div class="social-buttons">
                    <a href="@Html.DisplayFor(modelItem => item.Url)" class="btn btn-default" style="background-color: #0A69A7; color: white;"><b>More Details</b></a>
                </div>
            </div>
        </div>
    }
</div>